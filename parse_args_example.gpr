      for Default_Switches ("ada") use ("-j2");
   end Builder;

   package Compiler is
      for Default_Switches ("ada") use ("-gnat2012", "-gnata", "-gnatf", "-gnatVa", "-gnato", "-O");
   end Compiler;

   package Linker is
   end Linker;

end Parse_Args_Example;

