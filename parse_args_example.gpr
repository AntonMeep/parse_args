                         "simple_example.adb",
                         "generic_example.adb",
                         "generic_example_options.ads",
                         "generic_example_options.adb"
                        );
   for Object_Dir use "build/";
   for Exec_Dir use "exec/";
   for Main use (
                 "simple_example.adb",
                 "generic_example.adb"
                );

   package Ide is
      for Vcs_Kind use "Git";
      for Documentation_Dir use "doc/";
   end Ide;

